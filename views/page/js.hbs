<h3>JS文件</h3>

<div class="pageblock">
  <h5>JS列表(js) <a href="#" id="create_js_btn" class="btn btn-inverse btn-sm"><span class="fui-plus"></span> 新建JS</a></h5>
  <div id="jslist"></div>
</div>


<script id="jslist_template" type="text/x-handlebars-template">
  <table class="table table-striped table-hover table-vam">
    <thead>
      <tr>
        <th>文件名</th>
        <th>创建时间</th>
        <th>修改时间</th>
        <th>大小</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      \{{#each this}}
      <tr>
        <td><strong>\{{this.filename}}</strong></td>
        <td>\{{showTime this.ctime}}</td>
        <td>\{{showTime this.mtime}}</td>
        <td>\{{showFileSize this.size}}</td>
        <td>
          <a href="/preview/\{{tslink this.path}}" target="_blank" class="btn 
          btn-primary btn-sm"><span class="fui-eye"></span> 预览</a>
          <a href="/codeview?path=\{{this.path}}" target="_blank" class="btn btn-success btn-sm"><span class="fui-document"></span> 源代码</a>
          {{!-- <a href="javascript:;" data-filepath="\{{this.path}}" class="btn btn-danger btn-sm delete_js_btn"><span class="fui-cross"></span> 删除</a> --}}
        </td>
      </tr>
      \{{/each}}
    </tbody>
  </table>
</script>

<script id="create_js_template" type="text/x-handlebars-template">
  <div class="form-group">
    <label class="control-label" for="js_name">js文件名称 <span class="required">*</span> <span class="glyphicon glyphicon-info-sign"  data-toggle="tooltip" data-placement="right" data-original-title="只能使用英文数字和下划线减号做文件名"></span></label>
    <input class="form-control" id="js_name" type="text" pattern="[A-z0-9_-]+" required>
  </div>
</script>


{{#extend "bodybottom"}}
<script src="/js/page_js.js"></script>
{{/extend}}